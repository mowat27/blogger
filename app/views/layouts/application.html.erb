<!DOCTYPE html>
<html>
<head>
  <title>Blogger</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% flash.each do |key, value| %>
  <p class="flash" id="flash_<% key %>"><%= value %></p>
<% end %>

<%= yield %>

<hr/>

<div class="user-details">
  <p>
    <% if user_logged_in? %>
      Logged in as <%= current_user.email %>
      (<%= link_to "logout", logout_path %>) 
    <% else %>
      <%= link_to "Login", login_path %> or <%= link_to "sign up",
      new_user_path %> 
    <% end %>
  </p>
</div>

</body>
</html>
